@using ProyectoMVCEF.Models
@model List<EMP>
@{
    ViewBag.Title = "EmpleadosOficio";
}

@{
    List<String> oficios = ViewBag.Oficios;
    ResumenEmpleados resumen = ViewBag.Resumen;
}

<h2>Resumen de Empleados Oficio</h2>


<form method="post">
    <select name="ofi" class="form-control">
        @foreach (String ofi in oficios)
        {
            <option value="@ofi">@ofi</option>
        }
    </select>
    <button type="submit" class="btn-success">Mostrar Empleados</button>
</form>
<hr />
@if (Model!=null)
{
    <dl>
        <dt>Personas @resumen.Personas</dt>
        <dt>Suma salarial @resumen.SumaSalarial</dt>
        <dt>Media salarial @resumen.MediaSalarial</dt>
        <dt>Máximo salario @resumen.MaximoSalario</dt>
    </dl>

    <table class="table table-hover">
        @foreach (EMP emp in Model)
        {
            <tr>
                <td>@emp.APELLIDO</td>
                <td>@emp.OFICIO</td>
                <td>@emp.SALARIO</td>
            </tr>
        }
    </table>
}
