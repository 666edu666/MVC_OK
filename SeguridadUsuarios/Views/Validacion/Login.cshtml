
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Usuario</label>
        <input type="text" name="usuario" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="text" name="password" />
    </div>
    <div class="form-group">
        <button type="submit" class=" btn btn-success" >Login</button>
    </div>
}